{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "ignoreTests": true,
    "packageRules": [
        {
            "matchCategories": [
                "python"
            ]
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "draftPR": true,
            "automerge": false,
            "groupName": null
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": false,
            "postUpgradeTasks": {
                "commands": [
                    "poetry version patch"
                ],
                "executionMode": "branch"
            },
            "groupName": "all non-major dependencies"
        }
    ]
}
