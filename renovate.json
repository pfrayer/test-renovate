{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "ignoreTests": true,
    "packageRules": [
        {
            "matchCategories": [
                "python"
            ]
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "draftPR": true,
            "automerge": false,
            "groupName": null
        },
        {
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "branch",
            "postUpgradeTasks": {
                "commands": [
                    "VERSION=$(grep '^version = \"' pyproject.toml | awk -F '\"' '{print $2}' | awk -F. '{$NF = $NF + 1;} 1' | sed 's/ /./g')",
                    "sed -i \\"s/^version = .*$/version = \"$VERSION\"/g\\" pyproject.toml"
                ],
                "executionMode": "branch"
            },
            "groupName": "all non-major dependencies"
        }
    ]
}
