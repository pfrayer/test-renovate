{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "ignoreTests": true,
    "packageRules": [
        {
            "matchCategories": [
                "python"
            ]
        },
        {
            "automerge": false,
            "postUpgradeTasks": {
                "commands": [
                    "poetry version patch"
                ],
                "executionMode": "branch"
            },
            "groupName": "all dependencies"
        }
    ]
}
